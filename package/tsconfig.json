{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2017"],
    "allowJs": true,
    "jsx": "react-native",
    "isolatedModules": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "declaration": true
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "**/*.test.*", "**/*.spec.*"
  ],
  "include": ["src/**/*"]
}
